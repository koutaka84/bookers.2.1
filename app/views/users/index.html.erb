<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'layouts/user_info', user: @user %>
      <%= render 'layouts/new_book', newBook: @newBook %>

    </div>
    <div class="col-xs-9">
    <h2>Users</h2>

    <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
  <tr>
    <th><%= attachment_image_tag user, :profile_image, :size, 40, 40,format: 'jpg', fallback: "no_image.jpg" %></th>
    <td><%= user.name %></td>
    <th></th>
    <td><%= link_to "Show" ,user_path(user.id) %></td>
  </tr>
  <% end %>
  </tbody>
</table>

  </div>