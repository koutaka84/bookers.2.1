<div class="container">
<% if @book.errors.any? %> 
	<%= @book.errors.count %>件のerrorが発生しました 
	<% @book.errors.full_messages.each do |message| %> 
	<%= message %> 
	 <% end %> 
	 <% end %> 

<div class="container">
	<div class="row">
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %> 
		<div class="col-xs-3">
			<%= render 'layouts/user_info', user: @book.user %>
			<%= render 'layouts/new_book', newBook: @newbook %>
   

		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>

    <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
  <tr>
  	<td><%= attachment_image_tag @book.user, :profile_image, size: "30x30",format: 'jpg', fallback: "no_image.jpg" %><br>
      <%= link_to @book.user.name,user_path(@book.user.id) %>
    </td>
    <td><%= link_to @book.title,book_path %></td>
    <td><%= @book.body %></td>


    <td><% if @book.user == current_user %> <%= link_to "Edit",edit_book_path(@book.id) %><% end %></td>

    <td><% if @book.user == current_user %> <%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %> <% end %></td>
  </tr>
  </tbody>
</table>

  </div>
		</div>
	</div>
</div>
